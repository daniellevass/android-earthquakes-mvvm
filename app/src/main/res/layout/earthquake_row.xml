<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/slate_50">

    <ImageView
        android:id="@+id/imgMagnitude"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/bg_circle_yellow"
        android:importantForAccessibility="no"
        />

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="4.4 near Atlantic Ocean"
        android:maxLines="2"
        android:textSize="24sp"
        android:textColor="@color/slate_800"
        android:textStyle="bold"
        android:breakStrategy="simple"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/imgMagnitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="10 minutes ago"
        android:maxLines="2"
        android:textSize="16sp"
        android:textColor="@color/slate_800"
        android:breakStrategy="simple"
        android:layout_marginHorizontal="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toEndOf="@id/imgMagnitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>